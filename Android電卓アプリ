package com.example.calcapp;

import android.os.Bundle;
import android.view.View;
import android.widget.Button;
import android.widget.TextView;

import androidx.activity.EdgeToEdge;
import androidx.appcompat.app.AppCompatActivity;
import androidx.core.graphics.Insets;
import androidx.core.view.ViewCompat;
import androidx.core.view.WindowInsetsCompat;

import java.util.ArrayList;
import java.util.Collections;

public class MainActivity extends AppCompatActivity {
    public static int a = 0;
    public static int b = 0;
    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        ArrayList<Integer> btnNum = new ArrayList<>();
        Collections.addAll(btnNum,R.id.btn0,R.id.btn1,R.id.btn2,R.id.btn3,R.id.btn4,R.id.btn5,R.id.btn6,R.id.btn7,R.id.btn8,R.id.btn9);
        TextView txtFormula = findViewById(R.id.txtFormula);
        TextView txtResult = findViewById(R.id.txtResult);
        for (int i=0;i<btnNum.size();i++){
            Button btn = findViewById(btnNum.get(i));
            btn.setOnClickListener(new View.OnClickListener() {
                @Override
                public void onClick(View view) {
                    txtFormula.setText(txtFormula.getText().toString()+btn.getText().toString());
                }
            });
        }
        Button btnPlus = findViewById(R.id.btnPlus);
        btnPlus.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View view) {
                try {
                    if (!txtFormula.getText().toString().equals("")){
                        if (a!=0){
                            b = Integer.parseInt(txtFormula.getText().toString());
                            int c = a+b;
                            txtResult.setText(String.valueOf(c));
                            txtFormula.setText("");
                            a = a+b;
                        }else{
                            a = Integer.parseInt(txtFormula.getText().toString());
                            txtFormula.setText("");
                            txtResult.setText(String.valueOf(a));
                        }

                    }
                }catch (NumberFormatException e){
                    txtResult.setText("値が多すぎます。");
                }
            }
        });

        Button btnResult = findViewById(R.id.btnResult);
        btnResult.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View view) {
                try {

                    b = Integer.parseInt(txtFormula.getText().toString());
                    int c = a+b;
                    txtResult.setText(String.valueOf(c));
                    txtFormula.setText("");
                }catch (NumberFormatException e){
                    txtResult.setText("値が多すぎます。");
                }
            }
        });

        Button btnClear = findViewById(R.id.btnClear);
        btnClear.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View view) {
                ArrayList<Character> text = new ArrayList<>();
                String numbers = txtFormula.getText().toString();
                for (Character c : numbers.toCharArray()) {
                    text.add(c);
                }
                if (!text.isEmpty()) {
                    text.remove(text.size() - 1);
                }
                StringBuilder sb = new StringBuilder();
                for (char c : text) {
                    sb.append(c);
                }
                txtFormula.setText(sb.toString());
            }
        });

        Button btnAllClear = findViewById(R.id.btnAllClear);
        btnAllClear.setOnClickListener(new View.OnClickListener() {
            @Override
            public void onClick(View view) {
                txtFormula.setText("");
                txtResult.setText("");
                a =0;
                b =0;
            }
        });
    }
}
